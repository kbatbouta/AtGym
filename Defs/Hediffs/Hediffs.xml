<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>OutOfBreath</defName>
        <description>How the stamina level will effect this pawn.</description>
        <label>Stamina</label>
        <isBad>false</isBad>
        <chronic>true</chronic>
        <makesAlert>false</makesAlert>
        <everCurableByItem>false</everCurableByItem>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <tendable>false</tendable>
        <stages>
            <li>
                <label>Good</label>
                <becomeVisible>false</becomeVisible>
                <minSeverity>1</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>1.0</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>Tired</label>
                <becomeVisible>false</becomeVisible>
                <minSeverity>2</minSeverity>
                <painOffset>0.05</painOffset>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
                <hediffGivers>
                  <li Class="HediffGiver_Random">
                    <hediff>HeartAttack</hediff>
                    <mtbDays>60</mtbDays>
                    <partsToAffect>
                      <li>Heart</li>
                    </partsToAffect>
                  </li>
                </hediffGivers>
            </li>            
        </stages>
    </HediffDef>
    <HediffDef>
        <defName>Fitness</defName>
        <description>How fit is this pawn.</description>
        <label>Fitness</label>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <isBad>false</isBad>
        <chronic>true</chronic>
        <makesAlert>false</makesAlert>
        <countsAsAddedPartOrImplant>true</countsAsAddedPartOrImplant>
        <everCurableByItem>false</everCurableByItem>
        <tendable>false</tendable>
        <stages>
<!--            -->
            <li>
                <label>Overweight</label>
                <minSeverity>1</minSeverity>
                <becomeVisible>false</becomeVisible>
                <opinionOfOthersFactor>0.8</opinionOfOthersFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.65</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                    <li>
                        <capacity>StaminaCapacity</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                </capMods>
                <statFactors>
                </statFactors>
                <hediffGivers>
                  <li Class="HediffGiver_Random">
                    <hediff>HeartAttack</hediff>
                    <mtbDays>60</mtbDays>
                    <partsToAffect>
                      <li>Heart</li>
                    </partsToAffect>
                  </li>
                </hediffGivers>
            </li>
<!--            -->
            <li>
                <label>Fit</label>
                <minSeverity>2</minSeverity>
                <becomeVisible>false</becomeVisible>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>1.0</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>1.0</postFactor>
                    </li>
                    <li>
                        <capacity>StaminaCapacity</capacity>
                        <postFactor>1.0</postFactor>
                    </li>
                </capMods>
                <statFactors>
                    
                </statFactors>
            </li>
<!--            -->
            <li>
                <label>Jacked</label>
                <minSeverity>3</minSeverity>
                <becomeVisible>false</becomeVisible>
<!--                <hungerRateFactor>1.3</hungerRateFactor>-->
                <opinionOfOthersFactor>1.1</opinionOfOthersFactor>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.8</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>1.2</postFactor>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <postFactor>1.2</postFactor>
                    </li>
                    <li>
                        <capacity>StaminaCapacity</capacity>
                        <postFactor>1.2</postFactor>
                    </li>
                </capMods>
                <statFactors>
                </statFactors>
            </li>
<!--            -->
            <li>
                <label>Thin</label>
                <minSeverity>4</minSeverity>
                <becomeVisible>false</becomeVisible>
<!--                <hungerRateFactor>0.8</hungerRateFactor>-->
                <capMods>
                    <li>
                        <capacity>StaminaCapacity</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>1.3</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>0.95</postFactor>
                    </li>
                </capMods>
                <statFactors>
                </statFactors>
            </li>
        </stages>
    </HediffDef>
</Defs>
